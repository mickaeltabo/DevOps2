pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'dockercrypto'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                script {
                    docker.build(env.DOCKER_IMAGE)
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                script {
                    docker.image(env.DOCKER_IMAGE).run()
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // Ici, tu ajouteras plus tard les étapes pour déployer ton application.
            }
        }
    }
}
